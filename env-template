# Better Auth Configuration
BETTER_AUTH_SECRET=your-better-auth-secret-key-here
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Resend Email Service
RESEND_API_KEY=your-resend-api-key

# Auth Database Configuration (separate from app database)
DATABASE_URL=postgresql://auth_user:password@localhost:5434/doxin_auth

# Redis Configuration (for sessions)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_DB=2

# Flask API Configuration
NEXT_PUBLIC_FLASK_API_URL=http://localhost:5000
FLASK_API_URL=http://localhost:5000
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000

# Vercel Blob Storage (for invoice uploads)
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token-here

# Development Settings
NODE_ENV=development
